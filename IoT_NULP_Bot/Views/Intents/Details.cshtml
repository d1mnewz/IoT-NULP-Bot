@using Microsoft.Ajax.Utilities
@model List<Respons>

@{
    ViewBag.Title = "Details";
}

<h2>@Model.FirstOrDefault().Intent.content</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            Available responses: 
        </dt>
        @foreach (var el in Model)
        {
            <dd>
                @el.content | @Html.ActionLink("Edit", "Edit", 
                "Respons", new {id = el.id}, null)
</dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
